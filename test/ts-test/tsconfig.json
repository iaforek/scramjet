{
    "compilerOptions": {
      "lib": ["ES2020", "ES2021"],
      "target": "ES2018",
      "module": "commonjs",
      "rootDir": "./",
      "outDir": "./dist",
      "strict": true,
      "alwaysStrict": true,
      "removeComments": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "esModuleInterop": true,
      "pretty": true
    },
    "exclude": [
      "node_modules",
      "dist"
    ]
  }